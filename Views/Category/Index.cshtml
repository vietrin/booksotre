                            <div class="pagination-block">
                                @if (ViewBag.TotalPage > 1)
                                {
                                var pageDisplay = (int)ViewBag.MaxPage;
                                int totalPage = (int)ViewBag.TotalPage;
                                int currentPage = ((int)ViewBag.Page);

                                //Create numeric links
                                var startPageIndex = Math.Max(1, currentPage - pageDisplay / 2);
                                var endPageIndex = Math.Min(totalPage, currentPage + pageDisplay / 2);

                                var link = "/Category/Index/" + ViewBag.IdCategory;
      
                                    <ul class="pagination-btns flex-center">
                                        @if (currentPage > ViewBag.First)
                                        {
                                        <li><a href="@link?page=@ViewBag.First" title="Trang đầu" class="single-btn prev-btn ">|<i
                                            class="zmdi zmdi-chevron-left"></i></a></li>
                                        <li>
                                            <a href="@link?page=@ViewBag.Prev" title="Trang trước" class="single-btn prev-btn "><i
                                                class="zmdi zmdi-chevron-left"></i></a>
                                        </li>

                                        }
                                        @for (int i = startPageIndex; i <= endPageIndex; i++) 
                                        { if (currentPage==i) {
                                            <li class="active"><a href="@link?page=@i" class="single-btn"
                                                title="Trang @i">@i</a></li>
                                            }
                                            else
                                            {
                                            <li><a href="@link?page=@i" title="Trang @i" class="single-btn">@i</a></li>
                                            }
                                            }
                                            @if (currentPage < totalPage) { 
                                                <li><a href="@link?page=@ViewBag.Next"
                                                    class="single-btn next-btn"><i class="zmdi zmdi-chevron-right"
                                                        title="Trang sau"></i></a></li>
                                                <li><a href="@link?page=@ViewBag.Last" class="single-btn next-btn"
                                                        title="Trang cuối"><i class="zmdi zmdi-chevron-right"></i>|</a>
                                                </li>
                                                
                                                }

                                    </ul>
      

                                }
                                @if (ViewBag.TotalPage == 1){
